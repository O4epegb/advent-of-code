{
    "name": "advent-of-code-2017",
    "version": "1.0.0",
    "description": "Stuff from http://adventofcode.com 2017",
    "scripts": {
        "precommit": "lint-staged",
        "test": "jest",
        "watch:test": "jest --watch",
        "lintAll": "tslint --fix \"./src/**/*.ts\"",
        "prettierAll": "prettier --parser typescript --single-quote --tab-width 4 --write \"./src/**/*.ts\""
    },
    "dependencies": {
        "@types/jest": "^22.1.2",
        "husky": "^0.14.3",
        "jest": "^22.2.2",
        "lint-staged": "^6.1.0",
        "prettier": "^1.10.2",
        "ts-jest": "^22.0.4",
        "tslint": "^5.9.1",
        "typescript": "^2.7.1"
    },
    "lint-staged": {
        "*.ts": [
            "tslint",
            "prettier --parser typescript --single-quote --tab-width 4 --write",
            "git add"
        ]
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "roots": [
            "src/"
        ],
        "transform": {
            "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "testEnvironment": "node",
        "coverageDirectory": "./coverage",
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/**/*.ts"
        ]
    }
}
